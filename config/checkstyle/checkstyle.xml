<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
  Checkstyle Configuration — Color Variants Mod
  Based on Google Java Style Guide with Minecraft mod adjustments
-->
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>
    <property name="fileExtensions" value="java"/>

    <!-- Files must end with newline -->
    <module name="NewlineAtEndOfFile"/>

    <!-- No tab characters -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <module name="TreeWalker">

        <!-- ── NAMING CONVENTIONS ────────────────────────────── -->
        <module name="ConstantName">
            <!-- Constants must be UPPER_SNAKE_CASE -->
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        </module>

        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9_]*$"/>
        </module>

        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- ── MAGIC NUMBERS ─────────────────────────────────── -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1, 0, 1, 2, 3, 4"/>
            <property name="ignoreAnnotation" value="true"/>
            <property name="ignoreHashCodeMethods" value="true"/>
        </module>

        <!-- ── IMPORTS ───────────────────────────────────────── -->
        <module name="UnusedImports">
            <property name="processJavadoc" value="false"/>
        </module>

        <module name="IllegalImport">
            <!-- Prevent direct Fabric imports in common module -->
            <!-- Note: Checkstyle alone can't enforce this perfectly,
                 but it flags potential issues -->
        </module>

        <module name="RedundantImport"/>

        <!-- ── CODE QUALITY ──────────────────────────────────── -->
        <module name="EmptyBlock">
            <property name="option" value="text"/>
        </module>

        <module name="NeedBraces"/>

        <module name="LeftCurly"/>

        <module name="RightCurly"/>

        <module name="EmptyCatchBlock">
            <property name="exceptionVariableName" value="expected|ignore"/>
        </module>

        <!-- No trailing whitespace -->
        <module name="Regexp">
            <property name="format" value="[ \t]+$"/>
            <property name="illegalPattern" value="true"/>
            <property name="message" value="Trailing whitespace not allowed"/>
        </module>

        <!-- ── JAVADOC ───────────────────────────────────────── -->
        <module name="MissingJavadocMethod">
            <property name="scope" value="public"/>
            <property name="minLineCount" value="2"/>
            <property name="allowedAnnotations" value="Override, Test, BeforeEach, AfterEach"/>
            <property name="tokens" value="METHOD_DEF, ANNOTATION_FIELD_DEF"/>
        </module>

        <!-- ── SIZE LIMITS ───────────────────────────────────── -->
        <module name="MethodLength">
            <property name="max" value="150"/>
            <property name="countEmpty" value="false"/>
        </module>

        <module name="ParameterNumber">
            <property name="max" value="8"/>
        </module>

        <!-- ── MISC ──────────────────────────────────────────── -->
        <module name="UpperEll"/>

        <module name="ArrayTypeStyle"/>

        <module name="OuterTypeFilename"/>

        <module name="ModifierOrder"/>

        <module name="TodoComment">
            <property name="format" value="(TODO|FIXME|HACK|XXX):"/>
        </module>

    </module>
</module>
